[apply]
        whitespace = fix

[core]
        excludesFile = ~/.gitignore
        whitespace = space-before-tab, intent-with-non-tab, trailing-space

[color]
        ui = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[merge]
        log = true
